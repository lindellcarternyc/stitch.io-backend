generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Section {
  id        String  @id @default(uuid())
  name      String
  rows      Int     @default(0)
  stitches  Int     @default(0)
  projectId String
  project   Project @relation(fields: [projectId], references: [id])
}

model Project {
  id        String  @id @default(uuid())
  name      String
  sections  Section[]
}